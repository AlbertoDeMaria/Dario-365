{%- liquid
  assign show_payment_icons = section.settings.show_payment_icons
  assign show_locale_selector = section.settings.show_locale_selector
  assign show_currency_selector = section.settings.show_currency_selector
-%}

<footer class="bg-black text-white py-4">
  <div class="container mx-auto px-4">
    {% if section.settings.enable_menu %}
      <div class="menu-row mb-3">
        <nav class="footer-menu">
          <ul class="flex flex-wrap items-center justify-center">
            {% for link in section.settings.menu.links %}
              <li>
                <a href="{{ link.url }}" class="font-montserrat text-[{{ section.settings.menu_text_size_mobile }}px] md:text-[{{ section.settings.menu_text_size_desktop }}px] font-[{{ section.settings.menu_font_weight }}] leading-[20px] hover:underline">
                  {{ link.title }}
                </a>
                {% unless forloop.last %}
                  <span class="mx-2 font-montserrat text-[{{ section.settings.menu_text_size_mobile }}px] md:text-[{{ section.settings.menu_text_size_desktop }}px] font-[{{ section.settings.menu_font_weight }}] leading-[20px]">-</span>
                {% endunless %}
              </li>
            {% endfor %}
          </ul>
        </nav>
      </div>
    {% endif %}
    
    {% if section.settings.footer_text != blank %}
      <div class="text-row">
        <div class="footer-text font-montserrat text-[{{ section.settings.footer_text_size_mobile }}px] md:text-[{{ section.settings.footer_text_size_desktop }}px] font-[{{ section.settings.footer_font_weight }}] leading-[20px] text-center">
          {{ section.settings.footer_text }}
        </div>
      </div>
    {% endif %}
  </div>
</footer>

<style>
  .font-montserrat {
    font-family: 'Montserrat', sans-serif;
  }
  
  .footer-text, .footer-menu {
    color: oklab(0.41233 -0.00633241 -0.0270027);
  }
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "header",
      "content": "Contenuti"
    },
    {
      "type": "text",
      "id": "footer_text",
      "label": "Testo footer",
      "default": "Â© 2025, Store One More Time BUG 301 SRL, P.I. 12690450965"
    },
    {
      "type": "checkbox",
      "id": "enable_menu",
      "label": "Abilita menu",
      "default": true
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu footer",
      "default": "footer"
    },
    {
      "type": "header",
      "content": "Stile testo copyright"
    },
    {
      "type": "range",
      "id": "footer_text_size_mobile",
      "min": 10,
      "max": 20,
      "step": 1,
      "label": "Dimensione testo mobile",
      "default": 14
    },
    {
      "type": "range",
      "id": "footer_text_size_desktop",
      "min": 10,
      "max": 20,
      "step": 1,
      "label": "Dimensione testo desktop",
      "default": 14
    },
    {
      "type": "range",
      "id": "footer_font_weight",
      "min": 300,
      "max": 700,
      "step": 100,
      "label": "Peso testo copyright",
      "default": 500
    },
    {
      "type": "header",
      "content": "Stile testo menu"
    },
    {
      "type": "range",
      "id": "menu_text_size_mobile",
      "min": 10,
      "max": 20,
      "step": 1,
      "label": "Dimensione testo menu mobile",
